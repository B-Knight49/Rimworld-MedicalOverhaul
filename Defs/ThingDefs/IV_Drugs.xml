<Defs>

	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>Antidepressants</defName>
		<label>Antidepressants</label>
		<description>Antidepressants. Pills used to boost mood that usually come with side effects/withdrawal symptoms - however NOT addictive.</description>
		<graphicData>
		  <texPath>Things/Item/Drugs/IV_Antidepressants</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
		  <WorkToMake>500</WorkToMake>
		  <MarketValue>32</MarketValue>
		  <Mass>0.005</Mass>
		</statBases>
		<techLevel>Industrial</techLevel>
		<ingestible>
		  <drugCategory>Medical</drugCategory>
		  <outcomeDoers>
			<li Class="IngestionOutcomeDoer_GiveHediff">
			  <hediffDef>AntidepressantHediff</hediffDef>
			  <severity>1.0</severity>
			</li>
		  </outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>PenoxycylineProduction</researchPrerequisite>
		  <recipeUsers>
			<li>DrugLab</li>
		  </recipeUsers>
		</recipeMaker>
		<costList>
		  <Neutroamine>4</Neutroamine>
		</costList>
		<comps>
		  <li Class="CompProperties_Drug">
			<listOrder>1000</listOrder>
			<overdoseSeverityOffset>
			  <min>0.25</min>
			  <max>0.40</max>
			</overdoseSeverityOffset>
		  </li>
		</comps>
	</ThingDef>
	
