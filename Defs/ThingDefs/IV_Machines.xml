      <Flammability>1.0</Flammability>
    </statBases>
    <description>[PLACEHOLDER]</description>
    <size>(1,1)</size>
    <costList>
      <Steel>200</Steel>
	  <Plasteel>15</Plasteel>
	  <Silver>10</Silver>
    </costList>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
