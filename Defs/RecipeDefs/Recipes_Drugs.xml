<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<RecipeDef Name="MakeCrushedStemBase" Abstract="True">
		<description>A thick, gooey, red substance made by crushing bloodstem leaves. Used to create medical coagulants.</description>
		<jobString>Making Crushed Bloodstem.</jobString>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Bloodstem</li>
			</thingDefs>
		</fixedIngredientFilter>
		<workSpeedStat>DrugProductionSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<Intellectual>1</Intellectual>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
					<li>Bloodstem</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<soundWorking>Recipe_CookMeal</soundWorking>    
	</RecipeDef>

	<RecipeDef ParentName="MakeCrushedStemBase">
		<defName>Make2xCrushedStem</defName>
		<label>make 2x Crushed Bloodstem</label>
		<workAmount>3000</workAmount> <!-- Crafting spot recipe uses default workToMake in ThingDef -->
		<recipeUsers>
			 <li>DrugLab</li>
		</recipeUsers>
		<products>
		  <CrushedStem>2</CrushedStem>
		</products>
	</RecipeDef>
	
	<RecipeDef ParentName="MakeCrushedStemBase">
		<defName>MakeCrushedStem</defName>
		<label>make Crushed Bloodstem</label>
		<workAmount>5000</workAmount>
		<recipeUsers>
			 <li>CraftingSpot</li>
		</recipeUsers>
		<products>
		  <CrushedStem>1</CrushedStem>
		</products>
	</RecipeDef>

</Defs>